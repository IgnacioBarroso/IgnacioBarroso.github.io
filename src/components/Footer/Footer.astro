---
import Logo from '../Logo.astro';
import SocialIcons from '../SocialIcons.astro';
import './Footer.css';
---

<footer>
	<div class="footer__container">
		<Logo name="Ignacio Barroso" />
		<SocialIcons width="23" height="23" />
	</div>

	<aside class="footer__links">
		<ul>
			<li>
				<a class="footer__link" href="mailto:ignacio_barroso@outlook.com"
					><span
						><iconify-icon
							icon="fluent:mail-28-regular"
							width="27"
							height="27"
							style="color: #dcd8fc"></iconify-icon></span
					>ignacio_barroso@outlook.com</a>
			</li>
			<li>
				<a class="footer__link"
                href="https://github.com/IgnacioBarroso"
                target="_blank"
                rel="nofollow noreferrer noopener"
					><span
						><iconify-icon
							icon="mdi:github"
							width="27"
							height="27"
							style="color: #dcd8fc"></iconify-icon></span
					>@IgnacioBarroso</a>
			</li>
		</ul>
	</aside>
</footer>
